<h1>New Movie</h1>

<% if @movie.errors.any? %>
  <ul>
    <% @movie.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_tag(movies_url, method: 'post') do %>


  <div>
    <%= label_tag :title %><br />
    <%= text_field_tag :title %>
  </div>

    <div>
    <%= label_tag :year %><br />
    <%= number_field_tag :year %>
  </div>

    <div>
    <%= label_tag :director_id %><br />
    <%= select_tag :director_id, options_from_collection_for_select(Director.all, :id, :name) %>
  </div>


  <div>
    <%= submit_tag "Create Movie" %>
  </div>
<% end %>
